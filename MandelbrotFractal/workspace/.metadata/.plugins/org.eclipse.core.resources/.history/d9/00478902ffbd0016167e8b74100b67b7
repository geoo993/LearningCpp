#ifndef ZOOMLIST_H_
#define ZOOMLIST_H_

#include <vector>
#include "Zoom.h"

namespace fractalnamespace {

class ZoomList {
private:
	double m_xCenter{0};
	double m_yCenter{0};
	double m_scale{1.0};

	int m_width{0};
	int m_height{0};
	std::vector<Zoom> zooms;

public:
	ZoomList(int width, int height);
	void addUp(const Zoom &zoom);
	void addDown(const Zoom &zoom);
	std::pair<double, double> doZoomIn(int x, int y);
	std::pair<double, double> doZoomOut(int x, int y);
};

}

#endif /* ZOOMLIST_H_ */
