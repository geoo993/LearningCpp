#include <iostream>
#include "FractalGenerator.h"

using namespace std;
using namespace fractalnamespace;

int main() {


	FractalGenerator fractalGenerator(1200, 800, false, "bitmap");

	fractalGenerator.addRange(0.0, RGB(0, 0 , 0 ) );
	fractalGenerator.addRange(0.3, RGB(255, 255 , 255 ) );
	fractalGenerator.addRange(0.5, RGB(255, 255 , 255));
	fractalGenerator.addRange(1.0, RGB( 255 , 255, 255));

	fractalGenerator.run();
	cout << "Finished" << endl;


	return 0;
}
