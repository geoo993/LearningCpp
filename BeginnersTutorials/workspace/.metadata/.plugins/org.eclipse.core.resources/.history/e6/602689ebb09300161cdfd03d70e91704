#include <iostream>
using namespace std;


class Animal{
public:

	void speak(){
		cout << "ANIMAL SSSJJJSS" << endl;
	}

	~Animal(){};

};

class Cat: public Animal{

public:

	void speak(){
		cout << "CAT MSMANNNNNS" << endl;
	}

	~Cat(){};
};

class HouseCat: public Cat{

};



int main() {
	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	return 0;
}
