#ifndef PARTICLE_H_
#define PARTICLE_H_
#include <SDL.h>


namespace programmingparticles {

struct Particle { // class and struct are the same thing, by default class members of struct are public
//class Particle { //when setting class, its members by default are private

public:
	//member variable
	double m_x;
	double m_y;

public:
	Particle();
	virtual ~Particle();


};

}

#endif /* PARTICLE_H_ */
