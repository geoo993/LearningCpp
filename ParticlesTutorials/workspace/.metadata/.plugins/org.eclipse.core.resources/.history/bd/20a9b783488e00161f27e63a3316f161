#ifndef PARTICLE_H_
#define PARTICLE_H_
#include <SDL.h>


namespace programmingparticles {

struct Particle { // class and struct are the same thing, the onl difference is that by default class members of struct are public
//class Particle { //when setting class, its members by default are private


	//member variable
	double m_x;
	double m_y;

	//(rand()/RAND_MAX) * 0.02
	double movementSpeed = 0.008;

	//( ( (2.0 * rand()) /RAND_MAX ) - 1) gives a value between -1 and 1
	double xSpeed = moves * ( ( (2.0 * rand()) /RAND_MAX ) - 1);
	double ySpeed = moves * ( ( (2.0 * rand()) /RAND_MAX ) - 1);

public:
	Particle();
	virtual ~Particle();
	void update();


};

}

#endif /* PARTICLE_H_ */
