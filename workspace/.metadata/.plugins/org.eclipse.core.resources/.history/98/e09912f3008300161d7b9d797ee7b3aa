#include <iostream>
using namespace std;

class Vehicle {

private:
	string name;
	string manufacturer;


public:
	//this is the class constructor
	Vehicle(string name="", string manufacturer=""): name(name), manufacturer(manufacturer) {
		cout << "Vehicle constructor called." << endl;
	}
	string getName(){ return name; }
	string getManufacturer(){ return manufacturer; }

	void print(){cout << getName() <<  " is manufactured by " << getManufacturer() << endl;}
};

class Car: public Vehicle{

	//this is a sub class of the Vehicle class
public:
	Car(){ cout << "This is the Vehicle Car constructor." << endl;}
};


int main() {


	Vehicle vehicle("Airplane", "Boeing");
	vehicle.print();

	//this car class classed is based on the vehicle class, it is a sub class of vehicle class
	Car car;

	return 0;
}
