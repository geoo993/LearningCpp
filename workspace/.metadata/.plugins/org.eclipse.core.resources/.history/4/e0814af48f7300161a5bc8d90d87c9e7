#include <iostream>
#include <iomanip>
using namespace std;

int main() {

	int i = 0;

	while(i <= 5){

		cout << " Checking i => " << i << endl;

		//i = i + 1;
		//i++;
		++i;

	}
	cout << "Program Quit on " << i << endl;

	// do loop does the code first before executing the while condition
	int value = 6;
	do {

		cout << "Do this when while is true" << endl;
	}while(value < 8);


	return 0;
}
