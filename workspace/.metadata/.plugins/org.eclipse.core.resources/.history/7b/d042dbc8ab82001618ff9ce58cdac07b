#include <iostream>
using namespace std;



class Animal {

private:
	string name;

public:
	Animal(string name=""): name(name){};
	void print(){ cout << "Animal Name is: " << name << endl; };
};

int main() {

	//inheritance

	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!

	return 0;
}
