#include <iostream>
#include <array>
#include <string>
using namespace std;

int main() {

	//in first section you declare a variable which is going to be used for condition checks in second section and as a the loop counter in third section
	//in second section you put a condition which often involves the variable assigned in section one, the for loop will only be executed when this condition is true
	//in third section

	for(;;)
	{
		cout << "!!!Hello World!!!" << endl;
	}

	for(int i = 0; i < 3; ++i) {
		//cout << "!!!Hello World!!!" << endl;
	}


	return 0;
}
