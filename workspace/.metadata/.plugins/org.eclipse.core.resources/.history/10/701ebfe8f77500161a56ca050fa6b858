#include <iostream>
using namespace std;

int main() {

	string text = "hello";
	char texts[] = "hello"; // you can also store text in an array, char array in fact. the  char type is one byte long  and often used for storing characters from the ascii character set

	cout << text << endl;

	cout << texts << endl;

	return 0;
}
