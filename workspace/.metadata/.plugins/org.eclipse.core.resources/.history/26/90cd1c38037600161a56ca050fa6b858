#include <iostream>
#include <string>
using namespace std;

// reversing a primitive string

string reverseString(char cTexts[]){

	char *pStart = cTexts;

	int numberOfCharacters = strlen(cTexts); //or sizeof(texts)-1;
	char *pEnd = cTexts + numberOfCharacters - 1; // or &texts[numberOfCharacters-1];


	while (pStart < pEnd){
		//here we are reversing the texts char array using save and putting back on pEnd
		char save = *pStart;
		*pStart = *pEnd;
		*pEnd = save;

		pStart ++;
		pEnd --;
	}

	return (string)cTexts;
}


string reverse(char s[])
{
    int length = strlen(s) ;
    int c, i, j;

    for (i = 0, j = length - 1; i < j; i++, j--)
    {
        c = s[i];
        s[i] = s[j];
        s[j] = c;
    }

    return (string)s;
}


int main() {


	char texts[] = "hello george";
	cout << texts << endl;
	cout << "reverse string type 1: " << reverseString(texts) << endl;
	cout << "reverse string type 2: " << reverse(texts) << endl;

	return 0;
}
