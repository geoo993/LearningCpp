#include <iostream>
using namespace std;


void show1(string texts[], const int length){

	for (int i=0; i<length; i++ ){
		cout << texts[i] << endl;
	}
}
int main() {

	string fruits[] = {"Apple", "Banana", "Strawberry"};
	cout << sizeof(fruits) << endl;


	show1(fruits, 3);

	return 0;
}
