#include "GameConsoles.h"
#include <iostream>
#include <string>

using namespace std;


GameConsoles:: GameConsoles(){

	cout << "Checking Console...." << endl;

	name = "";
	controller = "";
	storage = "";
	price = 0.0;
	releaseDate = "";

}

