#include <iostream>
#include "Person.h"
using namespace std;

int main() {

	// getters and setters are just for getting and setting values

	Person person;

	string name;
	string age;
	string gender;

	cout << "Enter Perso Name > " << flush;
	cin >> name;
	cout << "Enter Age >";
	cin >> age;
	cout << "Enter Gender >";
	cin >> gender;

	person.setPerson(name, age, gender);
	person.print();

	return 0;
}
