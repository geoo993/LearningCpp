#ifndef COUNTRIES_H_
#define COUNTRIES_H_
#include <string>

class Country {

private:
    string name;
    string capital;
    int Population;
    string nationalLanguage;
    string currency;


public:
    Student();
    Student(int ID, string name, double GPA, char gender);
    void setStudent(int ID, string name, double GPA, char gender);
    int getID();
    string getName();
    double getGPA();
    char getGender();


public:
	int stringToInt(std::string str);
	std::string countryName(std::string countryName);//the speak function is created in Call file. you put the prototype of the function here, which can then be called in another class file
	std::string capital(std::string countryName);
	long int population(std::string countryName);
	std::string nationalLanguage(std::string countryName);
	std::string currency(std::string countryName);

};

#endif /* COUNTRIES_H_ */
