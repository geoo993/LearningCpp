#include <iostream>
#include <string>
using namespace std;

// reversing a primitive string

string reverseString(char cTexts[]){

	char *pStart = cTexts;

	int numberOfCharacters = strlen(cTexts); //or sizeof(texts)-1;
	char *pEnd = cTexts + numberOfCharacters - 1; // or &texts[numberOfCharacters-1];


	while (pStart < pEnd){
		//here we are reversing the texts char array using save and putting back on pEnd
		char save = *pStart;
		*pStart = *pEnd;
		*pEnd = save;

		pStart ++;
		pEnd --;
	}

	return (string)cTexts;
}


string reverse(char input[])
{
	int length = strlen(input);
	int last_pos = length-1;

	for(int i = 0; i < length/2; i++)
	{
	    char tmp = input[i];
	    input[i] = input[last_pos - i];
	    input[last_pos - i] = tmp;
	}


    return (string)input;
}

string reverseStr(char* str) {
	int len = strlen(str);
	  for(int i=0; i<len/2; i++) {
	    char temp=str[i];
	    str[i]=str[len-i-1];
	    str[len-i-1]=temp;
	  }
	  return (string)input;
}

int main() {


	char texts[] = "hello george";
	cout << texts << endl;
	cout << "reverse string type 1: " << reverseString(texts) << endl;
	cout << "reverse string type 2: " << reverse(texts) << endl;

	return 0;
}
