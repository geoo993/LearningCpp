#include <iostream>
using namespace std;


int main() {

	//we set this char to the maximum value of char, meaning 127 is the maximum value that you can fit in a char
	char value = 127;
	cout << (int)value << endl;

	value ++;
	cout << (int)value << endl;


	return 0;
}
