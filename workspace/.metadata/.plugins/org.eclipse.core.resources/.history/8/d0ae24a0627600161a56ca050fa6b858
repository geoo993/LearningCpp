#include <iostream>
#include <string>

using namespace std;

class Book{

private:
	string title;
	string genre;

public:
	Book(){ cout << "Book Created by Constructor..." << endl; };
	~Book(){ cout << "Book Disposed by Destructor..." << endl; };
	Book(const Book& other): title(other.title), genre(other.genre) { cout << "Book Created by copying..." << endl; };// this here, we are defining a copy constructor
	Book(string title, string genre, string dev, string platform): title(title), genre(genre), dev(dev), platform(platform){}
	void setTitle(string title) { this -> title = title; };
	void setGenre(string genre) { this -> genre = genre; };
	void setDeveloper(string dev) { this -> dev = dev; };
	void setPlatform(string platform) { this -> platform = platform; };
	void print() const {
		cout << dev << " made " << genre << " game, " << title << " for the " << platform << endl;
	};
};


int main() {


	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	return 0;
}
