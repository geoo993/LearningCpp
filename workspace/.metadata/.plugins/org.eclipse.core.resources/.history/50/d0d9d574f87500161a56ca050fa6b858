#include <iostream>
using namespace std;

int main() {

	string text = "hello";
	char texts1[] = "hello"; // you can also store text in an array, char array in fact. the  char type is one byte long  and often used for storing characters from the ascii character set
	char texts2[] = {'h','e','l','l','o'}; // same as texts1 above;

	cout << text << endl;

	cout << texts1 << endl;

	return 0;
}
