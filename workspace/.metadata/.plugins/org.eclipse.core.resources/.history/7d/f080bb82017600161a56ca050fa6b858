#include <iostream>
#include <string>
using namespace std;

// reversing a primitive string

string reverseString(string str){


}

int main() {


	string m = "morning";

	char *texts = m;

	//char texts[] = "morning";
	cout << texts << endl;


	char *pStart = texts;

	int numberOfCharacters = sizeof(texts)-1;//strlen(texts);
	char *pEnd = &texts[numberOfCharacters-1];//texts + numberOfCharacters - 1;


	cout << *pEnd << endl;

	while (pStart < pEnd){

		//here we are reversing the texts char array using save and putting back on pEnd
		char save = *pStart;
		*pStart = *pEnd;
		*pEnd = save;


		pStart ++;
		pEnd --;
	}

	cout << texts << endl;


	return 0;
}
