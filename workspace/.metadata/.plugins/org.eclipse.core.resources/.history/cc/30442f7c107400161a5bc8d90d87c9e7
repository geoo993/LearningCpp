#include <iostream>
using namespace std;


void showMenu(){// this is a block of code, which essentially defines a function

	cout << "1.\tSearch " << endl;
	cout << "2.\tView Record" << endl;
	cout << "3.\tQuit Program " << endl << endl;

}

string processingSelection(int input){

	switch (input) {
		case 1:
			return "Searching";
			cout << "Searching..." << endl;
			break;
		case 2:
			return "Viewing";
			cout << "Viewing..." << endl;
			break;
		case 3:
			return "Quitting";
			cout << "Quitting..." << endl;
			break;
		default:
			return "Please select an item from the Menu";
			cout << "Please select an item from the Menu" << endl;
			//continue;
	}

}


