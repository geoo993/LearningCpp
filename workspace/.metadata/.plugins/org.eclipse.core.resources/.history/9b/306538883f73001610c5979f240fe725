#include <iostream>
using namespace std;

int main() {


	string text = "Hello";

	cout << text << endl; // cout is also an object and its a special object for outputing text,
	cout << "Hello World" << endl;//the chevron (<<) is called the insertion operator, they are used to form an operation which in this case is used to insert data into the cout object to output text. :::: (+,=, -,/) are also operators
	//the opposite if << to get text from the user is to use cin
	return 0;
}
