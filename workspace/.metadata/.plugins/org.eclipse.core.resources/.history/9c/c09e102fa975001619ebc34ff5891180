#include <iostream>
using namespace std;

int main() {

	const int NUMBEROFSTRINGS = 5;// its good to puts constants in capital letters so that you know their difference with other variables

	string  texts[NUMBEROFSTRINGS] = {"one", "two", "three", "four", "five"};

	string *pTexts = texts;

	cout << pTexts << endl;

	return 0;
}
