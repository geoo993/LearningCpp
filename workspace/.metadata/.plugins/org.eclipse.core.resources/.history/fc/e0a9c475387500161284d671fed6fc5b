#include <iostream>
#include <sstream>
#include <string>
#include "Tvs.h"

using namespace std;

Tvs::Tvs() {
	// TODO Auto-generated constructor stub
	cout << "Starting Tv database..." << endl;

	name = "Undefined";
	resolution = "";
	price = 0.0;

}

Tvs::~Tvs() {
	// TODO Auto-generated destructor stub
	cout << "Ending Tv database...." << endl;
}

void Tvs::setTv(string name, resolution, double price){

	this -> name = name;
	this -> resolution = resolution;
	this -> price = price;
}

string Tvs::print(){
	stringstream ss;

	ss << "Name: ";
	ss << name << endl;
	ss << "Resolution: ";
	ss << resolution << endl;
	ss << "Price: ";
	ss << price << endl;

	return;
}
