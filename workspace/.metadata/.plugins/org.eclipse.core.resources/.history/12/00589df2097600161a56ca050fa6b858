#include <iostream>
#include "Animal.h"
using namespace std;

int main() {

	int iValue = 5;
	iValue = 203;
	cout << "value can be changed -> "<< iValue << endl;


	const double PI = 3.142; // adding const on variable means that const is no longer a variable, it cannot be changed
	cout << "const value cannot be changed -> " << PI << endl;

	Animal anim1;
	anim1.Animal("amphibians group");

	Animal anim2;
	anim2.Animal("birds group");

	Animal anim3;
	anim3.Animal("fish group");

	Animal anim4;
	anim4.Animal("Worm","invertebrates group");

	Animal anim5;
	anim5.Animal("mammals group");

	Animal anim6;
	anim6.Animal("Cobra", "reptiles group");


	// you can also declare methods to be constants
	return 0;
}
