#include <iostream>
#include <string>
using namespace std;

int main() {

	int value = 6;
	string text1 = "this is a string called: ";
	string text2 = "Alex";

	string text3 = text1+text2; //concatonating one string with another

	cout << text3 << endl;
	cout << text1 << text2 << value << endl;

	return 0;
}
