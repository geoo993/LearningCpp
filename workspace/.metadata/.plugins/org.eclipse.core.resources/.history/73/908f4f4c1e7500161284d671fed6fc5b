#ifndef GAMECONSOLES_H_
#define GAMECONSOLES_H_
#include <string>

class GameConsoles {
private:

	std::string name;
	std::string controller;
	int storage;
	double price;
	std::string releaseDate;
	bool onlineNetwork;

public:
	GameConsoles();//this is a constructor, contructors and destructors cant return a value
	~GameConsoles(); //this is a destructor, this runs when the object is destroyed
	GameConsoles(std::string name, std::string controller, int storage, double price, std::string releaseDate, bool onlineNetwork);
	void setConsole(std::string name, std::string controller, int storage, double price, std::string releaseDate, bool onlineNetwork);
	void consoleInfo(std::string name);
	int stringToInt(std::string str);
	std::string getConsoleName();
	void print();
};

#endif /* GAMECONSOLES_H_ */
