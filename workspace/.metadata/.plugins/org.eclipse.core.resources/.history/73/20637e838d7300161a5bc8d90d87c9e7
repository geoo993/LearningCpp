#include <iostream>
using namespace std;

int main() {

	int i = 0;

	while(i <= 5){

		cout << "!!!Hello World!!!" << i << endl;

		//i = i + 1;
		//i++;
		++i;
	}
	cout << "Program Quit on " << i << endl;

	return 0;
}
