#include <iostream>
using namespace std;

int main() {

	//int value = 0;
	char value = 78;

	cout << "What is Value: " << value << endl << endl;

	switch(value) {
	case 1:
		cout << "Value is Z" << endl;
		break;
	case 2:
		cout << "Value is ~" << endl;
		break;
	case 3:
		cout << "Value is $" << endl;
		break;
	case 4:
		cout << "Value is â‚¬" << endl;
		break;
	default :
		cout << "Unrecognized Value" << endl;

	}

	return 0;
}
