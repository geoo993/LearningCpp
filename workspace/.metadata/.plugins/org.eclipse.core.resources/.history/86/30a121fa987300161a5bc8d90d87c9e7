#include <iostream>
using namespace std;

int main() {

	for (int i=0; i < 20; i++){
		cout << "Hello " << i << endl;

		if (i==3)
		{
			cout << "Loop stops with Break " << i << endl;
			break;
			cout << "Check if loop is continuing " << endl;
		}

		cout << "Looping " << endl;

	}
	return 0;
}
