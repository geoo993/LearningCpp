#include <iostream>
using namespace std;


class Film{

private:
	string title;

public:
	Film(){ cout << "Film Created by Constructor..." << endl; };
	~Film(){ cout << "Film Disposed by Destructor..." << endl; };
	Film(const Book& other): title(other.title) { cout << "Film Created by copying..." << endl; };
	Film(string title): title(title){}
	void print() const {
		cout << title << " is a great film " << endl;
	};
};


int main() {


	Film *pFilm = new Film();

	delete pFilm;


	cout << "" << endl; // prints !!!Hello World!!!
	return 0;
}
