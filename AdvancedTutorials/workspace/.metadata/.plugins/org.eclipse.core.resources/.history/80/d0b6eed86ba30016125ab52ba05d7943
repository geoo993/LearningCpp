#include <iostream>
#include <functional>
#include <vector>
#include <algorithm>

using namespace std;

//doing functional types helps or lets you easily define type equivalent to, used to reference any callable types in c++, meaning anything you can call with round brackets


int main() {

	vector <string> vec{"one", "two", "three", "four"};
	count_if(vec.begin(), vec.end(), [](string test){ return test.size() == 3;});

	return 0;
}
