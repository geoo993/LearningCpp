#include <iostream>
using namespace std;


int main() {


	//char texts[] = {"one", "two", "three"};
	auto texts = {"one", "two", "three"};// in c++ 11 you do not need a type declaration anymore

//	for(int i=0;i<texts.size();i++){
//		cout << texts[i] << endl;
//
//		//char *cha[] = texts[i];
//	}

//	for (int j=0; j < (unsigned)strlen(texts);j++){
//
//	}
//
	for(auto text: texts) {
		cout << text << endl;
	}

	for(string::size_type i = 0; i < texts.size(); ++i) {
	    cout << texts[i] << endl;
	}

	for(auto::iterator it = texts.begin(); it != texts.end(); ++it) {
	    cout << *it << endl;
	}
//
