#include <iostream>
using namespace std;

class Animal{

public:
	virtual void print(){
		cout << "Animal parent" << endl;
	}
};

// an abstract class is a class containing methods which have no implementation and we say that they are pure virtual functions/methods
class Dog: public Animal{

};

int main() {

	return 0;
}
