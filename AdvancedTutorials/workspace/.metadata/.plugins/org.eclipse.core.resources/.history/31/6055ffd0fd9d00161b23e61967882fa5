#include <iostream>
#include <vector>

using namespace std;

int main() {

	vector <double> numbers(20);

	const int NUMBERS_SIZE = numbers.size();

	cout << "Size: " << NUMBERS_SIZE << endl;

	const int capacity = numbers.capasity();//a vector has a method called capacity, this is the size of the internal array

	cout << "Capacity: " << capacity << endl;

	for (int i = 0; i < 1000; i++){

	}

	return 0;
}
