#include <iostream>
using namespace std;


class MusicalInstrument {

public:

	//virtual means they could be overriden
	virtual void play(){ cout << "Playing instrument ... " << endl; }
	void reset(){ cout << "Resetting instrument ..." << endl; }
	virtual ~MusicalInstrument(){};
};

class Machine{
public:
	void start(){ cout << "Starting machine ... " << endl; }
	void reset(){ cout << "Resetting machine ..." << endl; }

	virtual ~Machine(){};

};

class Synthesizer: public MusicalInstrument , public Machine,

int main() {


	return 0;
}
