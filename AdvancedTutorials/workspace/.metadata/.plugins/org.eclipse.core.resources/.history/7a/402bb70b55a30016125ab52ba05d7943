#include <iostream>
using namespace std;


class Test{

private:
	int id{3};
	string name{"Ki"};

public:

	Test(int id): id(id), name(name){

	}


	void print(){
		cout << id << ": "<< name << endl;

	}
};


int main() {


	Test test;
	test.print();


	Test test1(6);// now you can overrride the default or the initialisation value set in the class
