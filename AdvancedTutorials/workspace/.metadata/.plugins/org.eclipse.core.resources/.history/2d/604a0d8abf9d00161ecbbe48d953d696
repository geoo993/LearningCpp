#include <iostream>
#include <exception>

using namespace std;

void goesWrong() {

	bool error1Detected = true;
	bool error2dtetcted = true;
	bool error3Detected = true;
	bool error4dtetcted = true;
	bool error5Detected = true;

	if (error1Detected) {
		throw bad_alloc();
	}

	if (error2dtetcted) {
		throw domain_error();
	}

	if (error3dtetcted) {
		throw bad_cast();
	}

	if (error4dtetcted) {
		throw domain_error();
	}

	if (error5dtetcted) {
		throw bad_typeid();
	}

}

int main() {

	try {
		goesWrong();
	}
	catch (bad_alloc &e) {
		cout << "Bad Alloc Exception Message: " << e.what() << endl;
	}
	catch(bad_cast &e) {
		cout << "Bad Cast Exception Message: " << e.what() << endl;
	}


	return 0;
}
