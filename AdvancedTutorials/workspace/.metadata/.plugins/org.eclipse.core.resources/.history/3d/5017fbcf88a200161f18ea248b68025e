#include <iostream>
using namespace std;


// sport is the parent or super class of Tennis and Rugby
class Sport{
public:
	void print(){
		cout << "Sport" << endl;
	}
};

// sub class of sport
class Tennis: public Sport {
public:
	void print(){
		cout << "Tennis is a Sport" << endl;
	}
};

class Rugby: public  Sport {
public:
	void print(){
		cout << "Rugby is a Sport" << endl;
	}
};



int main() {
	cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!
	return 0;
}
