#ifndef RGB_H_
#define RGB_H_

namespace bitmaptutorial {

struct RGB {

private:
	double r;
	double g;
	double b;

public:
	RGB(double r, double g, double b);
	friend RGB operator+(const RGB &first, const RGB &second);
	//virtual ~RGB();
};

}

#endif /* RGB_H_ */
