#include <iostream>
using namespace std;

class Film {

public:
	virtual void print(){
		cout << "Film is the Parent Class!" << endl;
	}

};

class Hostle: public Film {

};

class Oculus: public Film{

};

class Chucky: public Film{

};



int main() {

	Film film;
	Hostle hostle;
	Oculus oculus;
	Chucky chucky;

	Film *pFilm = &hostle;
	Oculus *pOculus = dynamic_cast<Oculus *> (pFilm);

	return 0;
}
