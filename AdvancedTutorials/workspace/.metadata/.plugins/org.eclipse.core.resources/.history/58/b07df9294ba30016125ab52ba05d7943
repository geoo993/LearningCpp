#include <iostream>
#include <vector>
using namespace std;

int main() {

	// c++ generalises the usage of braces
	int value{5};// here you do not need to put the equal sign
	cout << value << endl;

	string text{"Hello World!"};
	cout << text << endl;


	int numbers[]{1,2,3,4,5,6};
	cout << numbers[5] << endl;

	int *pInts = new int[4]{1, 2, 34, 6};
	cout << pInts[2] << endl;


	return 0;
}
