#include <iostream>


using namespace std;

int main() {

	auto y = [] (int first, int second)
	{
	    return first + second;
	};

	auto x1 = [](int i){ return i; }; // OK: return type is int
	auto x2 = []{ return{ 1, 2 }; };  // ERROR: return type is void, deducing
	                                  // return type from braced-init-list is not valid

	return 0;
}
