#include <iostream>
#include <fstream>

using namespace std;

int main() {

	string fileName = "stats.txt";

	ifstream input;
	input.open(fileName);

	if (input.is_open()){
		return 1;
	}
	cout << "!!!Hello World!!!" << endl;

	return 0;
}
