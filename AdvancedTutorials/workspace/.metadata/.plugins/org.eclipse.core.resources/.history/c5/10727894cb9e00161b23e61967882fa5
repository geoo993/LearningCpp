#include <iostream>
using namespace std;


class Test {
private:
	int id;
	string name;

public:

	Test() :
		id(0), name("") {
	}

	Test(const Test &other) {
		*this = other;
	}

	Test(int id, string name) :
		id(id), name(name) {
	}

	~Test() {
	}

	void print() const {
		cout << name << ": " << id << endl;
	}

	const Test &operator=(const Test &other) {

		cout << "Assignment running" << endl;
		id = other.id;
		name = other.name;

		return *this;
	}

};



int main() {

	Test test1(23, "Mike");

	//cout is type of offstream
	cout << test1 << endl;

	return 0;
}
