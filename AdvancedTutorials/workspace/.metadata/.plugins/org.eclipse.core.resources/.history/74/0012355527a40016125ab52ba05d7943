#include <iostream>
using namespace std;


class Film {

public:
	void print(){
		cout << "Parent Film!" << endl;
	}

};

class Hostle: public Film {

};

class Oculus: public Film{

};

class Chucky: public Film{

};


int main() {

	Film film;
	Hostle hostle;

	Film *pFilm = &hostle;
	Hostle *pHostle = static_cast<Hostle *> (&film);


	return 0;
}
