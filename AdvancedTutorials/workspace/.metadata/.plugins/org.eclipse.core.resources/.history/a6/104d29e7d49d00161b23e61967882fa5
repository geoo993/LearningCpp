#include <iostream>
#include <fstream>
using namespace std;


#pragma pack(push, 1)
struct Person{

	char name[50];
	int age;
	double weight;

};
#pragma pack(pop)

int main() {

	string fileName = "test.bin";// bin for binary file

	ofstream ouputFile;
	ouputFile.open(fileName, ios::binary);

	//if you're using fstream you need to include ios:out as well

	if (ouputFile.is_open()){



		ouputFile.close();

	}else{

		cout << "Could not create file: " + fileName << endl;
	}






	return 0;
}
