#include <iostream>
using namespace std;

int main() {
	//mutable keyword
	int val = 5;

	[val]() mutable
	{

		// by default the lambda expression does not allow you to assign to external local variables
		//val = 4;

		//but if you put the keyword mutable into the lambda expression, it will allow you to do so
		cout << val << endl;
	}();

	return 0;
}
