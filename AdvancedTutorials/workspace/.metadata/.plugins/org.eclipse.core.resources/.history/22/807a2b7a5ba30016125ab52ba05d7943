#include <iostream>
using namespace std;

int main() {

	//you can use lambda expression to pass around functions
	//lambda expression looks alot like a bracket fest/party
	[](){ cout << "Hello" << endl;};// this is a valid lambda expression, this is kind of like an anonymous espression

	return 0;
}
