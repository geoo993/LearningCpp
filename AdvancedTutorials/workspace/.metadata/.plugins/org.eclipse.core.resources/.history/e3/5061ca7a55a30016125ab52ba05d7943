#include <iostream>
using namespace std;


class Test{

private:
	int id{3};
	string name{"Ki"};

public:


	Test(){

	}
	Test() = default;// now you can simply set the contructor to default without having to put the curly brackets

	Test(int id): id(id), name(name)//now you dont need to do all these initialisations
	{

	}


	void print(){
		cout << id << ": "<< name << endl;

	}
};


int main() {


	Test test;
	test.print();


	Test test1(66);// now you can overrride the default or the initialisation value set in the class
	test1.print();


	return 0;
}
