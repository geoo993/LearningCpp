#include <iostream>
#include <fstream>

using namespace std;

int main() {

	string fileName = "stats.txt";

	ifstream input;
	input.open(fileName);

	if (input.is_open()){
		return 1;
	}

	while (input){
		string line;
		getline(input, line);//get line allows us to supply delimiter, meaning separators, were it will read the file up to the delimiter that you gave.
	}
	input.close();

	return 0;
}
