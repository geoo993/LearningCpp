#include <iostream>
using namespace std;


class Test{
private:
	int id{2};
	string name = "Aio";

public:

	Test(): Test(12, "Jon"){//using another constructor
		cout << "No Parameter Parent Constructor" << endl;
	}

	Test(string name){
		this -> name = name;
		cout << "String Parameter Parent Constructor" << endl;
	}

	Test(int id, string name): id(id), name(name){
		cout << "Int and String Parameter Parent Constructor" << endl;
	}

	void print(){
		cout << id << ": " << name << endl;
	}

	~Test(){
		cout << "Destructor" << endl;
	}
};



int main() {



	return 0;
}
